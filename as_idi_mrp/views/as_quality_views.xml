<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario cliente, campos adicionales -->
        <record id="as_quility_form" model="ir.ui.view">
            <field name="name">as.quality.check.form</field>
            <field name="model">quality.check</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="quality_control.quality_check_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='do_fail']" position="after">
                    <!-- <button name="%(report_certificate_idi)d" type="action" class="btn-primary" string="Imprimir Certificado"  attrs="{'invisible': [('quality_state', '!=', 'pass')]}"/> -->
                </xpath>
            </field>
        </record>
        <!-- Formulario cliente, campos adicionales -->
        <record id="as_quality_check_view_form_small" model="ir.ui.view">
            <field name="name">as.quality.check.form</field>
            <field name="model">quality.check</field>
            <field name="inherit_id" ref="quality_control.quality_check_view_form_small" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='note']" position="after">
                  Lote: <field name="lot_id" readonly="True" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>