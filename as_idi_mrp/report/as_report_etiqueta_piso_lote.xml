<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="label_etiqueta_view_pdf">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="lote">
                        <t t-foreach="lote" t-as="move">
                            <t t-set="contador" t-value="1" />  
                                <img t-att-src="image_data_uri(lote.company_id.logo)"
                                    style="height:40px; width: 150px;" /> 
                                <div style="text-align:center">
                                    <h3>PRODUCTO EN PROCESO</h3>
                                    CODIGO INTERNO: <span t-esc="move.product_id.default_code" /><br/>
                                    MATERIAL: <span t-esc="move.product_id.name" /><br/>
                                    LOTE: <span t-esc="move.name" /><br/> 
                                    FECHA: <t t-if="lote.create_date"><span t-esc="(datetime.datetime.strptime(str(lote.create_date), '%Y-%m-%d %H:%M:%S.%f') - datetime.timedelta(hours=5)).strftime('%d / %m / %Y')" /><br/></t>
                                    OBS: <t t-if="move.note"></t><br/>
                                    INSPECTOR: <span t-esc="lote.env.user.partner_id.name" /><br/>
                                    USO EXCLUSIVO DE MATERIAL:   
                                </div> 
                                <br/> <br/>
                                 <div class="col-12 text-left">
                                    <img t-att-src="image_data_uri(lote.get_qrcode(str(move.product_id.default_code)+'-'+move.name+'-'+str(move.id)))" style="max-height:3.5cm;max-width:3cm;" /><br/>
                                    <br/>
                                    <span style="font-size:12px" t-esc="str(lote.product_id.default_code)+' - ' + 'WH' + '/' +'IN'+'/'+move.name+' - '+str(move.id)"/>
                                </div>
                            
                    <br/><br/>
                    <br/><br/>

                        <div style="text-align:center">       
                            <br/>__________________________________________________  <br/>
                        </div>    
                        <div class="row mt0 mb0 ">
                        <div class="col-6 text-left">Firma y Sello </div>
                        <div class="col-6 text-left">COP-CAL-FOR-09,REV.3</div>
                        </div>
                                <!-- <p style="page-break-before:always;" /> -->

                            <!-- </t> -->
                        </t>
                    </t>
                </div>
            </t>
        </template>

    </data>
</odoo>